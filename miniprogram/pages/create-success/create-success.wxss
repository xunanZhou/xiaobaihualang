/* pages/create-success/create-success.wxss */

.success-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  padding-top: calc(20rpx + var(--status-bar-height, 0));
  height: 88rpx;
}

.navbar-back {
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.navbar-back:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.95);
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.navbar-placeholder {
  width: 56rpx;
}

/* 主内容区域 */
.page-content {
  padding-top: calc(88rpx + var(--status-bar-height, 0) + 40rpx);
  padding-bottom: 40rpx;
}

/* 通用卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-left: 16rpx;
}

/* 成功状态卡片 */
.success-card {
  text-align: center;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
}

.success-animation {
  margin-bottom: 32rpx;
  animation: successPulse 2s ease-in-out infinite;
}

@keyframes successPulse {
  0%, 100% { 
    transform: scale(1); 
  }
  50% { 
    transform: scale(1.05); 
  }
}

.success-icon {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.success-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #00a870;
  display: block;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 作品预览 */
.artwork-preview {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.artwork-info {
  text-align: left;
}

.artwork-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 16rpx;
}

.info-item {
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  font-size: 26rpx;
  color: #1a1a1a;
  word-break: break-all;
}

/* 统计数据卡片 */
.stats-grid {
  margin-top: 24rpx;
}

.stat-item {
  padding: 24rpx 16rpx;
}

.stat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
  transition: all 0.3s ease;
}

.stat-content:active {
  transform: scale(0.95);
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 成就提示 */
.achievement-tip {
  display: flex;
  align-items: center;
  margin-top: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #ffd54f 0%, #ffb74d 100%);
  border-radius: 16rpx;
  color: #333;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.achievement-content {
  flex: 1;
}

.achievement-title {
  font-size: 28rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 操作按钮卡片 */
.actions-card {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
}

.secondary-btn {
  border: 2rpx solid #667eea;
  color: #667eea;
}

/* 分享功能卡片 */
.share-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.share-grid {
  margin-top: 24rpx;
}

.share-item {
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.share-item:active {
  background: rgba(124, 77, 255, 0.05);
  transform: scale(0.95);
}

.share-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.share-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.share-label {
  font-size: 24rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* 推荐创作卡片 */
.inspiration-list {
  margin-top: 24rpx;
}

.inspiration-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.inspiration-item:last-child {
  border-bottom: none;
}

.inspiration-item:active {
  background: rgba(255, 152, 0, 0.05);
  border-radius: 12rpx;
  margin: 0 -16rpx;
  padding: 24rpx 16rpx;
}

.inspiration-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 152, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 40rpx;
}

.inspiration-content {
  flex: 1;
}

.inspiration-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.inspiration-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .card {
    margin: 0 24rpx 24rpx;
    padding: 24rpx;
  }
  
  .navbar-content {
    padding: 16rpx 24rpx;
  }
  
  .page-content {
    padding-top: calc(88rpx + var(--status-bar-height, 0) + 24rpx);
  }
  
  .success-title {
    font-size: 40rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
}

/* 动画效果 */
.fade-in {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .success-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .card {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }
  
  .navbar-title,
  .card-title,
  .success-title,
  .artwork-title,
  .inspiration-title {
    color: white;
  }
  
  .success-desc,
  .info-label,
  .info-value,
  .share-desc,
  .inspiration-desc {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .artwork-preview {
    background: rgba(255, 255, 255, 0.05);
  }
} 