/* pages/create/create.wxss */

.create-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  position: relative;
  padding-bottom: 160rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  padding-top: calc(20rpx + var(--status-bar-height, 0));
  height: 88rpx;
}

.navbar-left,
.navbar-right {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.navbar-left {
  justify-content: flex-start;
}

.navbar-right {
  justify-content: flex-end;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  text-align: center;
}

/* 主内容区域 */
.page-content {
  padding-top: calc(88rpx + var(--status-bar-height, 0) + 40rpx);
  padding-bottom: 40rpx;
}

/* 通用卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-left: 16rpx;
  flex: 1;
}

/* 输入区域 */
.input-area {
  position: relative;
}

.prompt-input {
  width: 100%;
  min-height: 120rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.prompt-input:focus {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.08);
}

.input-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

/* 风格选择 */
.style-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 16rpx;
}

.style-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.style-item:active {
  transform: scale(0.95);
}

.style-item.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.style-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.style-emoji {
  font-size: 36rpx;
}

.style-name {
  font-size: 24rpx;
  color: #1a1a1a;
  font-weight: 500;
  text-align: center;
}

/* 高级设置 */
.advanced-section {
  border: 2rpx dashed #e0e0e0;
}

.expand-advanced {
  text-align: center;
  margin: 0 32rpx 32rpx;
}

.setting-item {
  margin-bottom: 32rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 16rpx;
}

.negative-input {
  width: 100%;
  min-height: 80rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  border: 1rpx solid #e0e0e0;
}

/* 尺寸选项 */
.size-options {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.size-option {
  flex: 1;
  min-width: 120rpx;
  padding: 20rpx 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.size-option:active {
  transform: scale(0.95);
}

.size-option.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.size-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 4rpx;
}

.size-ratio {
  font-size: 22rpx;
  color: #666;
}

/* 质量选项 */
.quality-options {
  display: flex;
  gap: 16rpx;
}

.quality-option {
  flex: 1;
  padding: 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.quality-option:active {
  transform: scale(0.95);
}

.quality-option.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.quality-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #1a1a1a;
}

/* 生成结果 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
}

.loading-animation {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}

.loading-circle {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #667eea;
  margin: 0 8rpx;
  animation: loading-bounce 1.4s ease-in-out infinite both;
}

.loading-circle:nth-child(1) { animation-delay: -0.32s; }
.loading-circle:nth-child(2) { animation-delay: -0.16s; }

@keyframes loading-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.loading-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

/* 图片网格 */
.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.image-item:active {
  transform: scale(0.95);
}

.image-item.selected {
  border-color: #667eea;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.generated-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(102, 126, 234, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 示例提示词 */
.examples-list {
  margin-top: 16rpx;
}

.example-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  cursor: pointer;
}

.example-item:last-child {
  border-bottom: none;
}

.example-item:active {
  background: rgba(102, 126, 234, 0.05);
  margin: 0 -32rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.example-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(102, 126, 234, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 28rpx;
}

.example-content {
  flex: 1;
}

.example-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.example-prompt {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 16rpx;
}

.generate-btn,
.publish-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.generate-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
}

.publish-btn {
  background: linear-gradient(135deg, #26de81 0%, #20bf6b 100%);
  border: none;
  color: white;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .card {
    margin: 0 24rpx 24rpx;
    padding: 24rpx;
  }
  
  .navbar-content {
    padding: 16rpx 24rpx;
  }
  
  .style-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .bottom-actions {
    padding: 20rpx 24rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .create-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .card {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }
  
  .navbar-title,
  .section-title,
  .setting-label,
  .style-name,
  .size-text,
  .quality-text,
  .loading-text,
  .example-title {
    color: white;
  }
  
  .char-count,
  .size-ratio,
  .progress-text,
  .example-prompt {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .prompt-input,
  .negative-input {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .size-option,
  .quality-option {
    border-color: rgba(255, 255, 255, 0.2);
  }
} 