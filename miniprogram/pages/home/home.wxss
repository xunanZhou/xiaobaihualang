/* pages/home/home.wxss */
.home-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 作品容器 */
.artworks-container {
  padding: 32rpx;
}

/* 作品卡片 */
.artwork-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.artwork-card:active {
  transform: scale(0.98);
}

.artwork-image-container {
  position: relative;
  width: 100%;
}

.artwork-image {
  width: 100%;
  display: block;
  border-radius: 24rpx 24rpx 0 0;
}

.artwork-info {
  padding: 24rpx;
}

.artwork-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.artwork-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.author-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.author-name {
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.create-time {
  font-size: 24rpx;
  color: #999999;
  flex-shrink: 0;
}

/* 加载更多 */
.loading-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  gap: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

.create-btn {
  background: #0052d9;
  color: #ffffff;
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.create-btn:active {
  background: #003ba3;
}

/* 悬浮按钮 */
.fab-create {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  width: 112rpx;
  height: 112rpx;
  background: #0052d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3);
  z-index: 999;
}

.fab-create:active {
  transform: scale(0.95);
}

.fab-icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 300;
} 