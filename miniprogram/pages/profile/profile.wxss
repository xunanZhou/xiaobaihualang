/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.page-content {
  padding: 32rpx;
}

/* 卡片基础样式 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* 未登录状态 */
.welcome-card {
  text-align: center;
}

.welcome-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.welcome-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 48rpx;
  display: block;
}

.login-btn {
  background: #0052d9;
  color: #ffffff;
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: inline-block;
}

.login-btn:active {
  background: #003ba3;
}

.login-tips {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

/* 添加测试按钮样式 */
.test-avatar-section {
  text-align: center;
  margin: 16rpx 0;
  padding: 16rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.test-avatar-btn {
  background: #0052d9;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 功能介绍 */
.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.feature-item {
  text-align: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f8ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
}

.feature-emoji {
  font-size: 40rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  color: #666666;
  display: block;
}

/* 已登录状态 */
.user-card {
  text-align: center;
}

.user-info {
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.user-role {
  font-size: 28rpx;
  color: #666666;
  display: block;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #0052d9;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  display: block;
}

/* 快捷操作 */
.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.action-item {
  text-align: center;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f8ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 12rpx;
}

.action-emoji {
  font-size: 36rpx;
}

.action-label {
  font-size: 24rpx;
  color: #333333;
  display: block;
}

/* 个人画廊 */
.gallery-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.gallery-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
}

.gallery-image {
  width: 100%;
  height: 200rpx;
}

.gallery-info {
  padding: 16rpx;
}

.gallery-title {
  font-size: 24rpx;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gallery-time {
  font-size: 20rpx;
  color: #999999;
  display: block;
}

/* 空状态 */
.empty-gallery {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
  display: block;
}

.create-btn {
  background: #0052d9;
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: inline-block;
}

.create-btn:active {
  background: #003ba3;
} 